generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Event {
  id         Int      @id @default(1)
  totalSeats Int
  seatsSold  Int
  updatedAt  DateTime @updatedAt
}

model Purchase {
  id             Int      @id @default(autoincrement())
  quantity       Int
  idempotencyKey String   @unique
  createdAt      DateTime @default(now())
}